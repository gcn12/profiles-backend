// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  name              String   @unique
  profilePictureURL String
  career            String
  location          String
  bio               String
  tabs              String[]
  username          String
}

model Tab {
  name     String @unique
  type     String
  content  String
  authorId String
  id       String @id @default(uuid())
}
